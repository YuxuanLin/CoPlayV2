@using CoPlayV2.Extentions
@using CoPlayV2.Models
@model CoPlayV2.Models.MyManageIndexViewModels

@{
    ViewBag.Title = "Manage Index";
}
<!--main container-->
<div class="container">
    <!--side bar and content in one row-->
    <div id="firstRow" class="row">
        <!--side bar nav-->
        <div class="col-sm-3">
            <!--for collapse-->
            <div class="sidebar-nav">
                <!--set style-->
                <div class="navbar navbar-default" role="navigation">
                    <!--nav head name-->
                    <div class="navbar-header">
                        <!--For collapse button in mobile-->
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <!--nav name for mobile (visible in mobile)--> 
                        <span class="visible-xs navbar-brand">Personal Setting</span>
                    </div>
                    <!--nav contents-->
                    <div class="navbar-collapse collapse sidebar-navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="#">Profile</a></li>
                            <li><a href="#">Messeges <span class="badge">1,118</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <!--Setting content panel-->
        <div class="col-sm-9">

            <div class="panel panel-default">
                <div class="panel-heading">Personal setting</div>
                <div class="panel-body">
                 @using (Html.BeginForm(actionName: "UpdateUserInfoTask", controllerName: "Manage", method: FormMethod.Post))
                 {
                     
                         <!--email-->
                         <div class="form-group">
                             @Html.LabelFor(m => m.currentUser.user.Email)
                             @Html.TextBoxFor(model => model.currentUser.user.Email, new {@class = "form-control", placeholder = "Email"})
                         </div>
                         <!--username-->
                         <div class="form-group">
                             @Html.LabelFor(m => m.currentUser.user.UserName)
                             @Html.TextBoxFor(model => model.currentUser.user.UserName, new {@class = "form-control", placeholder = "Username"})
                         </div>
                         <!--Lastname-->
                         <div class="form-group">
                             @Html.LabelFor(m => m.currentUser.user.LastName)
                             @Html.TextBoxFor(model => model.currentUser.user.UserName, new {@class = "form-control", placeholder = "Lastname"})

                         </div>
                         <!--Firstname-->
                         <div class="form-group">
                             @Html.LabelFor(m => m.currentUser.user.FirstName)
                             @Html.TextBoxFor(model => model.currentUser.user.FirstName, htmlAttributes: new {@class = "form-control", placeholder = "FirstName"})

                         </div>
                         <!--Gender-->
                         <div class="form-group">
                             <!--<div class="col-xs-4"> -->
                             @Html.LabelFor(m => m.currentUser.user.Gender)
                             @Html.DropDownListFor(m => m.currentUser.user.Gender,
                                 selectList: new SelectList(items: Enum.GetValues(typeof(Gender))),
                                 optionLabel: "Select Gender",
                                 htmlAttributes: new {@class = "form-control"})
                             <!--</div>-->
                         </div>
                         <!--DOB-->
                         <div class="form-group">
                             @Html.LabelFor(m => m.currentUser.user.Age)
                             @Html.TextBoxFor(model => model.currentUser.user.Age, htmlAttributes: new {@class = "form-control", placeholder = "Age"})
                         </div>

                         <button type="submit" class="btn btn-success">Update profile</button>
                     
                 }
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">Sport level setting</div>
                <div class="panel-body">Panel Content

                </div>
            </div>

<!--            <div class="panel panel-success">
                <div class="panel-heading">Panel with panel-success class</div>
                <div class="panel-body">Panel Content</div>
            </div>

            <div class="panel panel-info">
                <div class="panel-heading">Panel with panel-info class</div>
                <div class="panel-body">Panel Content</div>
            </div>

            <div class="panel panel-warning">
                <div class="panel-heading">Panel with panel-warning class</div>
                <div class="panel-body">Panel Content</div>
            </div>-->

        </div>
    </div>
</div>
@Styles.Render("~/bundles/ManageCss")