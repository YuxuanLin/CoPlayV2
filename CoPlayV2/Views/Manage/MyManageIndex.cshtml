@using CoPlayV2.Extentions
@using CoPlayV2.Models
@model CoPlayV2.Models.MyManageIndexViewModels

@{
    ViewBag.Title = "Manage Index";
}

<!--main container-->
<div class="container">
    <!--side bar and content in one row-->
    <div id="firstRow" class="row">
        <!--side bar nav-->
        <div class="col-sm-3">
            <!--for collapse-->
            <div class="sidebar-nav">
                <!--set style-->
                <div class="navbar navbar-default" role="navigation">
                    <!--nav head name-->
                    <div class="navbar-header">
                        <!--For collapse button in mobile-->
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <!--nav name for mobile (visible in mobile)-->
                        <span class="visible-xs navbar-brand">Personal Setting</span>
                    </div>
                    <!--nav contents-->
                    <div class="navbar-collapse collapse sidebar-navbar-collapse">
                        <ul class="nav navbar-nav">    
                            <li class="active">@Html.ActionLink("Profile","MyIndex","Manage")</li>
                            <li>@Html.ActionLink("Message","CheckMessages","Manage")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!--Setting content panel-->
        <div class="col-sm-6">

            <div class="panel panel-default">
                <div class="panel-heading">Personal setting</div>
                <div class="panel-body">
                    @using (Html.BeginForm(actionName: "UpdateUserInfoTask", controllerName: "Manage", method: FormMethod.Post))
                 {
                     
                    <!--email-->
                    <div class="form-group">
                        @Html.LabelFor(m => m.CurrentUser.user.Email)
                             @Html.TextBoxFor(model => model.CurrentUser.user.Email, new {@class = "form-control", placeholder = "Email"})
                    </div>
                    <!--username-->
                     <div class="form-group">
                         
                         @Html.LabelFor(m => m.CurrentUser.user.UserName)
                         @Html.TextBoxFor(model => model.CurrentUser.user.UserName, new {@class = "form-control", placeholder = "Username"})
                     </div>
                    <!--Firstname-->
                    <div class="form-group">
                        @Html.LabelFor(m => m.CurrentUser.user.FirstName)
                             @Html.TextBoxFor(model => model.CurrentUser.user.FirstName, htmlAttributes: new {@class = "form-control", placeholder = "FirstName"})

                    </div>
                    <!--Lastname-->
                    <div class="form-group">
                        @Html.LabelFor(m => m.CurrentUser.user.LastName)
                             @Html.TextBoxFor(model => model.CurrentUser.user.LastName, new {@class = "form-control", placeholder = "Lastname"})

                    </div>

                    <!--Gender-->
                     <div class="form-group">
                         
                             @Html.LabelFor(m => m.CurrentUser.user.Gender)
                             @Html.DropDownListFor(m => m.CurrentUser.user.Gender,
                                 selectList: new SelectList(items: Enum.GetValues(typeof(Gender))),
                                 htmlAttributes: new {@class = "form-control"})
                         
                     </div>

                    <!--DOB-->
                     <div class="form-group ">
                         
                             @Html.LabelFor(m => m.CurrentUser.user.Age)
                             @Html.TextBoxFor(model => model.CurrentUser.user.Age, htmlAttributes: new {@class = "form-control", placeholder = "Age"})
                         
                     </div>

                    <!--button-->
                     <div class="form-group ">
                          
                        <button type="submit" class="btn btn-success">
                            Update details
                        </button>

                     </div>
                    }
                </div>
            </div>

            <!--Sport elvel setting panel-->
            <div class="panel panel-default">
                <div class="panel-heading">Sport level setting</div>
                <div class="panel-body">
                    @using (Html.BeginForm(actionName: "UpdateUserSportLevel", controllerName: "Manage", method: FormMethod.Post))
                 {
                     
                    <!--Badminton-->
                    <div class="form-group">
                        @Html.LabelFor(m => m.BadmintonPf)
                        @Html.EnumDropDownListFor(m => m.BadmintonPf,
                            null,
                            htmlAttributes: new {@class = "form-control"})
                    </div>
                    <!--Fitness-->
                    <div class="form-group">
                        @Html.LabelFor(m => m.FitnessPf)
                        @Html.EnumDropDownListFor(m => m.FitnessPf,
                            null,
                            htmlAttributes: new {@class = "form-control"})
                    </div>
                    <!--Squash-->
                    <div class="form-group">
                        @Html.LabelFor(m => m.SquashPf)
                        @Html.EnumDropDownListFor(m => m.SquashPf,
                                null,
                                htmlAttributes: new {@class = "form-control"})
                    </div>
                     <!--Swimming-->
                    <!--for test-->
                    <div class="form-group">
                        @Html.LabelFor(m => m.SwimmingPf)
                        @Html.EnumDropDownListFor(m => m.SwimmingPf,
                                 null,
                                 htmlAttributes: new {@class = "form-control"})

                    </div>
                    <!--Table Tennis-->
                    <div class="form-group">
                        <!--<div class="col-xs-4"> -->
                        @Html.LabelFor(m => m.TabletennisPf)
                        @Html.EnumDropDownListFor(m => m.TabletennisPf,
                                 null,
                                htmlAttributes: new {@class = "form-control"})
                             <!--</div>-->
                    </div>
                     <!--Tennis indoor-->
                    <div class="form-group">
                        @Html.LabelFor(m => m.TennisIdpf)
                        @Html.EnumDropDownListFor(m => m.TennisIdpf,
                                 null,
                                 htmlAttributes: new {@class = "form-control"})
                    </div>
                     <!--Tennis Outdoor-->
                    <!--for test-->
                    <div class="form-group">
                        @Html.LabelFor(m => m.TennisOdpf)
                        @Html.EnumDropDownListFor(m => m.TennisOdpf,
                                null,
                                htmlAttributes: new {@class = "form-control"})
                    </div>
                         <button type="submit" class="btn btn-success">Update levels</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@Styles.Render("~/bundles/ManageCss")