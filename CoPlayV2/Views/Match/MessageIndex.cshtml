@model CoPlayV2.Models.SendMessage
@{
    ViewBag.Title = "Message";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    @using (Html.BeginForm(actionName: "CreateMessage", controllerName: "Match", method: FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.DisplayFor(m => m.receiver.user.LastName)
        @Html.HiddenFor(model => model.receiver.user.Id)
        @Html.TextAreaFor(m => m.message, new { @class = "form-control" })  
        <input id="send" type="submit" value="Send" class="btn btn-primary" />
    }
</div>